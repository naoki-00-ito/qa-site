<h1 class="c-ttl">New question</h1>

<div class="p-form">
  <%= form_with model: @question do |form| %>
    <div class="p-form__row">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="p-form__row">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="p-form__row">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>

    <div class="p-form__btn">
      <%= form.submit %>
    </div>
  <% end %>
</div>